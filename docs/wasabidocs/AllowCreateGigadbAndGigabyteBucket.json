{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CreateGigadbBucket",
      "Effect": "Allow",
      "Action": "s3:CreateBucket",
      "Resource": "arn:aws:s3:::bucket-GIGA-D-??-?????",
      "Condition": {
        "StringLike": {
          "s3:BucketName": "bucket-GIGA-D-??-?????"
        }
      }
    },
    {
      "Sid": "CreateGigabyteBucket",
      "Effect": "Allow",
      "Action": "s3:CreateBucket",
      "Resource": [
        "arn:aws:s3:::bucket-DRR-??????-??",
        "arn:aws:s3:::bucket-TRR-??????-??"
      ],
      "Condition": {
        "StringLike": {
          "s3:BucketName": [
            "bucket-DRR-??????-??",
            "bucket-TRR-??????-??"
          ]
        }
      }
    }
  ]
}