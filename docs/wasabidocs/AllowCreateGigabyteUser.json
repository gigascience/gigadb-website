{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowCreateGigabyteUser",
      "Effect": "Allow",
      "Action": "iam:CreateUser",
      "Resource": [
        "arn:aws:iam::${aws:accountid}:user/author-DRR-*/*",
        "arn:aws:iam::${aws:accountid}:user/author-TRR-*/*"
      ],
      "Condition": {
        "StringLike": {
          "aws:username": [
            "author-DRR-??????-??",
            "author-TRR-??????-??"
          ]
        }
      }
    }
  ]
}