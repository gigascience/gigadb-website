<phpunit bootstrap="bootstrap.php"
		colors="true"
		convertErrorsToExceptions="true"
		convertNoticesToExceptions="true"
		convertWarningsToExceptions="true"
		stopOnFailure="true">

	<logging>
		<log type="coverage-clover" target="/var/www/protected/runtime/clover.xml"/>
		<log type="coverage-text" target="php://stdout" showOnlySummary="true"/>
		<log type="coverage-text" target="/var/www/protected/runtime/phpunit-coverage.txt" />
		<log type="coverage-html" target="/var/www/protected/runtime/coverage" lowUpperBound="35"
       highLowerBound="70"/>
	</logging>
</phpunit>