#!/usr/bin/env bash

set -e

echo "About to run  automated tests..."

echo "First, backup the main database..."
pg_dump gigadb -U gigadb -h database -p 5432 -F custom  -f /var/www/sql/before-run.pgdmp > /var/www/protected/runtime/pg_dump.log 2>&1

echo "Loading test users"
source test_users.txt

echo "Running acceptance tests"
Behat/bin/behat --tags @ok -v --stop-on-failure -c tests/behat.yml

echo "Preparing the test database..."
psql -U gigadb -h database < /var/www/sql/gigadb_unit_tests.sql > /var/www/protected/runtime/setup_test_database.log 2>&1


echo "Running unit tests"
cd /var/www/protected/tests && ./../../Behat/vendor/phpunit/phpunit/phpunit --config=phpunit.xml unit

echo "...all automated tests have run"

echo "Lastly, restoring the main database..."
pg_restore -i -h database -p 5432 -U gigadb -d gigadb -c -v /var/www/sql/before-run.pgdmp > /var/www/protected/runtime/pg_restore.log 2>&1
